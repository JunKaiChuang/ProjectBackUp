
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        html {
            font-size: 14px;
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
    <title>Face Service</title>
    <link href="~/Content/kendo.common-material.min.css" rel="stylesheet" />
    <link href="~/Content/kendo.material.min.css" rel="stylesheet" />
    <link href="~/styles/uploadExamples.css" rel="stylesheet" />
    <link href="~/styles/index.css" rel="stylesheet" />

    <script src="~/scripts/jquery-3.1.0.min.js"></script>
    <script src="~/scripts/kendo/kendo.all.min.js"></script>
    <script src="~/scripts/Index.js"></script>
</head>
<body>
    <ul>
        <li><a class="active" href="#home">Home</a></li>
        <li><a href='@Url.Action("ManagementPage", "FaceService")'>Management</a></li>
    </ul>

    <div id="example">
        <div class="box">
            <h4>Information</h4>
            <p>
                The Upload can be used as a drop-in replacement
                for file input elements. This "synchronous" mode does not require
                special handling on the server.
            </p>
        </div>
        <form method="post" id="form" action="/FaceService/Submit" target="_blank">
            <div class="demo-section k-content">
                <input name="files" id="files" type="file" accept=".jpg" />
                <p style="padding-top: 1em; text-align: right">
                    <input type="submit" value="Submit" class="k-button k-primary" />
                </p>
            </div>
        </form>
        <img name="resultImage" />
    </div>


</body>
</html>

